<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="sde.group.iii.inventorysystem.controller.LoginController" stylesheets="/styles.css">
    <center>
        <VBox fx:id="loginPane" spacing="15" alignment="CENTER" styleClass="login-container">
            <Label text="Welcome to Inventory Management System" styleClass="heading"/>
            <TextField fx:id="usernameField" promptText="Username" styleClass="input-field"/>
            <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field"/>
            <Button fx:id="loginButton" text="Login" onAction="#handleLogin" styleClass="button"/>
        </VBox>
    </center>
</BorderPane>


