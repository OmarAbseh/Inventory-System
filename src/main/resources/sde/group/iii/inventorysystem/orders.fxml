<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="sde.group.iii.inventorysystem.controller.OrdersController"
      spacing="10.0" padding="10.0">

    <!-- Header Label -->
    <Label text="Orders Page" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- TableView to display orders -->
    <TableView fx:id="ordersTable" prefWidth="600.0" prefHeight="300.0">
        <columns>
            <TableColumn fx:id="orderIdColumn" text="Order ID" prefWidth="100.0" />
            <TableColumn fx:id="customerNameColumn" text="Customer Name" prefWidth="150.0" />
            <TableColumn fx:id="orderDateColumn" text="Order Date" prefWidth="150.0" />
            <TableColumn fx:id="orderAmountColumn" text="Amount" prefWidth="100.0" />
        </columns>
    </TableView>
</VBox>
