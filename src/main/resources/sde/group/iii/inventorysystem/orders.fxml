<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="sde.group.iii.inventorysystem.controller.OrdersController"
      spacing="10.0">

    <!-- Use Insets for padding -->
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>

    <!-- Header Label -->
    <Label text="Orders Page" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" />

    <!-- TableView to display orders -->
    <TableView fx:id="orderTable" prefWidth="600.0" prefHeight="300.0">
        <columns>
            <TableColumn fx:id="orderIdColumn" text="Order ID" prefWidth="100.0" style="-fx-text-fill: white;" />
            <TableColumn fx:id="customerNameColumn" text="Customer Name" prefWidth="150.0" style="-fx-text-fill: white;" />
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="150.0" style="-fx-text-fill: white;" />
            <TableColumn fx:id="shippingAddressColumn" text="Shipping Address" prefWidth="200.0" style="-fx-text-fill: white;" />
        </columns>
    </TableView>
</VBox>


